<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/historyFragment"
    android:orientation="vertical"
    tools:context="com.mattkormann.tournamentmanager.HistoryFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_history"
        android:id="@+id/history_title"
        android:layout_gravity="center_horizontal|top"
        android:textSize="@dimen/generic_title"
        android:gravity="center"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/generic_padding"
        android:layout_marginLeft="@dimen/generic_padding"
        android:layout_marginRight="@dimen/generic_padding"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/name"
            android:layout_marginEnd="@dimen/grid_spacing"
            android:layout_marginRight="@dimen/grid_spacing"
            android:id="@+id/nameLabel" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/size"
            android:layout_marginEnd="@dimen/grid_spacing"
            android:layout_marginRight="@dimen/grid_spacing"
            android:id="@+id/sizeLabel" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/winner"
            android:layout_marginEnd="@dimen/grid_spacing"
            android:layout_marginRight="@dimen/grid_spacing"
            android:id="@+id/winnerLabel" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lastSaved"
            android:layout_marginEnd="@dimen/grid_spacing"
            android:layout_marginRight="@dimen/grid_spacing"
            android:id="@+id/savedLabel" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="@dimen/generic_padding"
        android:layout_marginRight="@dimen/generic_padding"
        android:layout_marginBottom="@dimen/generic_padding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/recyclerView">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
