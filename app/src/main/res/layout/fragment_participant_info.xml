<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.mattkormann.tournamentmanager.ParticipantInfoFragment">

    <TextView
        android:id="@+id/name_label"
        android:text="@string/enter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/participant_table_padding"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/name_text_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/participant_table_padding"
        android:paddingEnd="@dimen/participant_table_padding"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:layout_toRightOf="@id/name_label"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/team_label"
        android:text="@string/is_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/participant_table_padding"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/is_team_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/team_label"
        android:paddingRight="@dimen/participant_table_padding"
        android:paddingEnd="@dimen/participant_table_padding"/>

</RelativeLayout>