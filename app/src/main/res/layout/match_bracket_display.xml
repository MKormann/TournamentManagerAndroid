<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/bracket_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/top_seed"
            android:text="1"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:layout_weight=".1"
            android:layout_width="0dip"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/top_name"
            android:text="Warriors"
            android:textAlignment="center"
            android:layout_weight=".7"
            android:layout_width="0dip"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/top_stat"
            android:text="121"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:layout_weight=".2"
            android:layout_width="0dip"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bracket_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bottom_seed"
            android:text="16"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:layout_weight=".1"
            android:layout_width="0dip"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/bottom_name"
            android:text="Lakers"
            android:textAlignment="center"
            android:layout_weight=".7"
            android:layout_width="0dip"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/bottom_stat"
            android:text="89"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:layout_weight=".2"
            android:layout_width="0dip"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>